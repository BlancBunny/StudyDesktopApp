<Window x:Class="SnakeBiteGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeBiteGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Stretch="Fill" Source="main.png"/>
        <TextBlock Text="Snake Bike Game"
                   FontSize="40" FontWeight="ExtraBold" Foreground="Yellow"
                   HorizontalAlignment="Center" Margin="40"/>
        <Button x:Name="btnPlay" Content="Play" FontSize="20" 
                Width="200" Height="50" Margin="140,279,452,90"
                Click="BtnPlay_Click"/>
        <Button x:Name="btnQuit" Content="Quit" FontSize="20" 
                Width="200" Height="50" Margin="452,279,140,90"
                Click="BtnQuit_Click"/>
        
    </Grid>
</Window>
